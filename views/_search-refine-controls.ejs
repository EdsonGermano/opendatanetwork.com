<section class="refine-bar search-header-bar">
    <a id="catalog-info-box-button" class="small-api-link">API</a>

    <div class="refine-link">
        <span>Categories<i class="fa fa-caret-down"></i></span>
        <ul id="refine-menu-categories" style="display:none">
            <% refineBy.categories.forEach(category => { %>
                <li>
                    <a href="<%- searchNavigate.addCategory(category.category).url() %>">
                        <i class="fa <%= category.metadata.icon %>"></i>
                        <%= category.category %>
                    </a>
                </li>
            <% }); %>
        </ul>
    </div>

    <div class="refine-link">
        <span>Publishers<i class="fa fa-caret-down"></i></span>
        <ul id="refine-menu-domains" style="display:none">
            <% refineBy.domains.forEach(domain => { %>
                <li>
                    <a href="<%- searchNavigate.addDomain(domain.domain).url() %>">
                        <%= domain.domain %>
                    </a>
                </li>
            <% }); %>
        </ul>
    </div>

    <label class="refine-by-label">Refine by:</label>
    <i class="fa fa-bar-chart search-results-header-icon"></i>
    <label class="search-results-header-label">
        <% if (query.length > 0) { %>
            <% if (datasets.length > 0) { %>
                Found datasets for "<%= query %>"
            <% } else { %>
                No datasets for "<%= query %>"
            <% } %>
        <% } else { %>
            Found datasets
        <% } %>
    </label>

    <% include _search-tokens %>
</section>

<div id="catalog-info-box" class="api-info-box">
    <a class="fa fa-close"></a>
    <strong>
        <a href="http://docs.cetera.apiary.io/#reference/0/full-text-search" target="_blank">/catalog/v1</a>
    </strong>
    <dl>
        <% if (query.length > 0) { %>
            <dt>Example:</dt>
            <dd><a href="http://api.us.socrata.com/api/catalog/v1?q=<%= query %>" target="_blank">Search for <%= query %></a></dd>
        <% } %>
        <dt>API Docs:</dt>
        <dd>
        <a href="http://docs.cetera.apiary.io/#reference/0/full-text-search" target="_blank">Full text search</a>
        <% if (domains.length > 0) { %>
            or <a href="http://docs.cetera.apiary.io/#reference/0/searching-particular-domains" target="_blank">Search particular domains</a>
        <% } %>
        <% if (categories.length > 0) { %>
            or <a href="http://docs.cetera.apiary.io/#reference/0/searching-particular-categories" target="_blank">Search particular categories</a>
        <% } %>
        </dd>
    </dl>
</div>
