<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="Find the data you need to power your business, app, or analysis from across the open data ecosystem." />
    <meta name="keywords" content="open data, government data, housing data, restaurant inspecitions data, transit data, health data, crime data, permit data" />
    <title>Find the data you need to power your business, app, or analysis from across the open data ecosystem.</title>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,800" rel="stylesheet" type="text/css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="/styles/v3-app.min.css" rel="stylesheet" type="text/css">
<% css.forEach(function(path) { -%>
    <link href="<%= path %>" rel="stylesheet" type="text/css">
<% }); %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script src="/scripts/v3-app.min.js" type="text/javascript"></script>
<% scripts.forEach(function(path) { -%>
    <script src="<%= path %>" type="text/javascript"></script>
<% }); -%>
</head>
<body>
<header>
    <a class="logo" href="/v3" title="Open Data Network"></a>
    <div class="menus">
        <div id="menu-item-communities">
            <a class="menu-item-link">Data by Category<i class="fa fa-caret-down"></i></a>
            <ul id="menu-communities" class="menu">
              <% categories.forEach(function(category) { %>
                <li><a href="/v3-search?categories=<%= encodeURIComponent(category.title) %>"><%= category.title %></a></li>
              <% }) %>
            </ul>
        </div>
        <a class="menu-item-link">Publishers</a>
        <a class="menu-item-link">Schemas</a>
    </div>
</header>

<section class="search-bar">
    <form method="GET" action="v3-search" id="form" autocomplete="off">
        <a class="fa fa-search search-link"></a><a class="fa fa-caret-down search-options-link"></a>
        <span><input type="text" placeholder="Search the Open Data Network" name="q" id="q" value="<%= params.q %>"></span>
        <input type="hidden" name="categories" id="categories" value="<%= params.categories.join(',') %>">
        <% if (params.domains.length > 0) { %><input type="hidden" name="domains" value="<%= params.domains.join(',') %>"><% } %>
        <% if (params.tags.length > 0) { %><input type="hidden" name="tags" value="<%= params.tags.join(',') %>"><% } %>
    </form>
    <div class="search-options-menu">
        <div class="search-options-menu-title">Search in</div>
        <div class="search-options-menu-all"><a><i class="fa fa-check"></i>All Categories</a></div>
        <ul>
          <% categories.forEach(function(category) { %>
            <li><a><i class="fa fa-check"></i><%= category.title %></a></li>
          <% }) %>
        </ul>
    </div>
  <% if (tooltips) { %>
    <div class="search-textbox-tip">
        <div><strong>Start your search here.</strong> Search for data like Aenean eu leo quam.</div>
    </div>
    <div class="search-dropdown-tip">
        <div>Click here to refine your search.</div>
    </div>
  <% } %>
</section>