<section class="regions-section">
    <div class="container">
        <h4>Geographical Regions</h4>
        <ul class="states-list states-list-collapsed">

          <% if (locations) locations.forEach(location => { %>
            <li class="state state-collapsed">
                <h3>
                    <a class="small-api-link">API</a>
                    <i class="fa fa-map-marker"></i>
                    <a href="/region/<%= location.id %>/<%= location.name %>"><%= location.name %></a>
                </h3>
                <div class="api-info-box">
                    <a class="fa fa-close"></a>
                    <strong>
                        <a href="http://docs.odn.apiary.io/#reference/0/entity-relationships" target="_blank">/entity/child</a> Endpoint
                    </strong>
                    <dl>
                        <dt>Example:</dt>
                        <dd><a href="http://api.opendatanetwork.com/entity/v1/child?entity_id=<%= location.id %>&limit=5" target="_blank">Metros in <%= location.name %></a></dd>
                        <dd><a href="http://api.opendatanetwork.com/entity/v1/child?entity_id=<%= location.id %>&limit=5" target="_blank">Counties in <%= location.name %></a></dd>
                        <dd><a href="http://api.opendatanetwork.com/entity/v1/child?entity_id=<%= location.id %>&limit=5" target="_blank">Cities in <%= location.name %></a></dd>
                        <dt>API Docs:</dt>
                        <dd><a href="http://docs.odn.apiary.io/#reference/0/relatives/find-the-relatives-of-an-entity" target="_blank">Find the relatives of an entity</a></dd>
                    </dl>
                </div>
                <ul class="regions-list">
                  <% for (var i = 0; i < location.msas.length; i++) { %>
                    <li class="region">
                        <a href="<%= location.msas[i].url %>"><%= location.msas[i].name %></a>
                    </li>
                  <% } %>
                </ul>
                <ul class="regions-list">
                  <% for (var i = 0; i < location.counties.length; i++) { %>
                    <li class="region">
                        <a href="<%= location.counties[i].url %>"><%= location.counties[i].name %></a>
                    </li>
                  <% } %>
                </ul>
                <ul class="regions-list">
                  <% for (var i = 0; i < location.cities.length; i++) { %>
                    <li class="region">
                        <a href="<%= location.cities[i].url %>"><%= location.cities[i].name %></a>
                    </li>
                  <% } %>
                </ul>
                <a class="more-subregions-link">Show More</a>
             </li>
          <% }) %>

        </ul>
        <div class="cb"></div>
        <a class="more-regions-link">Show More</a>
    </div>
</section>

<section class="regions-section-mobile">
    <h4>Geographical Regions</h4>
    <ul class="states-list-mobile">
      <% if (locations) locations.forEach(function(location) { %>
        <li>
            <h3>
                <a class="state-expand-mobile fa fa-plus" region-id="<%= location.id %>"></a>
                <a class="state-link-mobile" href="/region/<%= location.id %>/<%= location.name %>">
                    <i class="fa fa-map-marker"></i>
                    <%= location.name %>
                </a>
            </h3>
            <div class="sub-regions-container-<%=location.id %>-mobile sub-regions-container-mobile">
                <ul class="sub-regions-list-mobile">
                    <% for (var i = 0; i < location.msas.length; i++) { %>
                    <li>
                        <a href="<%= location.msas[i].url %>"><%= location.msas[i].name %></a>
                    </li>
                    <% } %>
                    <% for (var i = 0; i < location.counties.length; i++) { %>
                    <li>
                        <a href="<%= location.counties[i].url %>"><%= location.counties[i].name %></a>
                    </li>
                    <% } %>
                    <% for (var i = 0; i < location.cities.length; i++) { %>
                    <li>
                        <a href="<%= location.cities[i].url %>"><%= location.cities[i].name %></a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </li>
      <% }) %>
    </ul>
</section>
