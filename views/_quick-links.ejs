<div class="quick-links-container">
    <div class="quick-links-button-wide">Quick Links<i class="fa fa-caret-down"></i></div>
    <i class="quick-links-button-narrow fa fa-bars"></i>
    <div class="quick-links-menu-container">
        <div class="quick-links-menu">
            <div>
                <ul class="quick-links-sub-menu quick-links-categories">
                    <li>Categories</li>
                <% quickLinks.categories.forEach(function(category, index) { %>
                    <li<%- (index > 4) ? ' class="quick-links-hidden"' : '' %>><a href="/search?categories=<%- encodeURIComponent(category.category) %>&ref=<%= quickLinks.ref %>"><i class="fa <%- category.metadata.icon %>"></i><%= category.category %></a></li>
                <% }); %>
                </ul>
            </div>
            <div>
                <ul class="quick-links-sub-menu">
                    <li>Regions</li>
                <% quickLinks.regions.forEach(function(region, index) { %>
                    <li<%- (index > 4) ? ' class="quick-links-hidden"' : '' %>><a href="/region/<%= region.id %>/<%= region.name %>&ref=<%= quickLinks.ref %>"><%= region.name %></a></li>
                <% }); %>
                </ul>
            </div>
            <div>
                <ul class="quick-links-sub-menu">
                    <li>Publisher</li>
                <% quickLinks.domains.forEach(function(domain, index) { %>
                    <li<%- (index > 4) ? ' class="quick-links-hidden"' : '' %>><a href="/search?domains=<%- encodeURIComponent(domain.domain) %>&ref=<%= quickLinks.ref %>"><%= domain.domain %></a></li>
                <% }); %>
                </ul>
            </div>
            <div>
                <ul class="quick-links-sub-menu">
                    <li>Standards</li>
                    <li><a href="/search?tags=blds&ref=<%= quickLinks.ref %>">BLDS</a></li>
                    <li><a href="/search?tags=lives&ref=<%= quickLinks.ref %>">LIVES</a></li>
                </ul>
            </div>
        </div>
        <a class="quick-links-more">More</a>
    </div>
</div>
