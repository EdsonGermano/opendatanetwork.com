<% include v4-header %>

<section class="search-bar">
    <form method="GET" action="v4-search" id="form" autocomplete="off">
        <a class="fa fa-search search-link"></a><a class="fa fa-caret-down search-options-link"></a>
        <span><input type="text" placeholder="Search the Open Data Network" name="q" id="q" value="<%= params.q %>"></span>
    </form>
    <ul class="region-list" style="display:none"></ul>
    <div class="search-options-menu">
        <div class="search-options-menu-title">Search in</div>
        <div class="search-options-menu-all"><a><i class="fa fa-check"></i>All Categories</a></div>
        <ul>
          <% allCategoryResults.results.forEach(function(result) { %>
            <li><a><i class="fa fa-check"></i><%= result.category %></a></li>
          <% }) %>
        </ul>
    </div>
  <% if (tooltips) { %>
    <div class="search-textbox-tip">
        <div><strong>Start your search here.</strong> Search for data like Crime, Budget, etc.</div>
    </div>
    <div class="search-dropdown-tip">
        <div>Click here to refine your search.</div>
    </div>
  <% } %>
</section>

<section class="blue">
    <div class="container">
        <h1>Open Data Network</h1>
        <p>
            The Open Data Network connects publishers of high-value data to the businesses,<br>
            developers, and analysts that use, reuse, and enrich data.  The members of the network work<br>
            together to share best practices, adopt standards, and advocate for open data broadly.
        </p>
        <a href="http://fast.wistia.net/embed/iframe/0jjxetu1ys?videoWidth=640&videoHeight=360&controlsVisibleOnLoad=true&autoPlay=true&popover=true"
class="wistia-popover[width=640,height=360,playerColor=#636155] fa fa-play-circle-o play-video-button"></a>
    </div>
</section>

<section class="gray">
    <div class="container">
        <h4>Data Categories</h4>
        <ul>
          <% allCategoryResults.results.forEach(function(result) { %> 
            <li>
                <a class="icon" href="/search?categories=<%= encodeURIComponent(result.category) %>"><i class="fa <%= result.metadata.icon %>"></i></a>
                <a href="/search?categories=<%= encodeURIComponent(result.category) %>"><h3><%= result.category %></h3></a>
            </li>
          <% }); %>
        </ul>
        <div class="cb"></div>
    </div>
</section>

